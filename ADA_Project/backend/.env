# =========================
# FLASK APP CONFIG
# =========================
FLASK_ENV=development
FLASK_DEBUG=1

# Change this to a long random string before going to production
FLASK_SECRET_KEY=change_this_secret_key

# =========================
# DATABASE (SQLite)
# =========================
# SQLite DB file will be created inside the "instance" folder
SQLALCHEMY_DATABASE_URI=sqlite:///ada.db
SQLALCHEMY_TRACK_MODIFICATIONS=False

# =========================
# FILE UPLOAD SETTINGS
# =========================
MAX_FILE_MB=20
KEEP_UPLOAD_MINUTES=60

# =========================
# AI / LLM PROVIDER
# Choose ONE: "gemini" or "openai"
# =========================
ADA_LLM_PROVIDER=gemini

# For Gemini
GOOGLE_API_KEY=your_gemini_api_key_here

# For OpenAI or OpenAI-compatible
OPENAI_API_KEY=your_openai_key_here
OPENAI_BASE_URL=

# =========================
# CORS / SECURITY
# (you can leave this empty for local dev)
# =========================
ALLOWED_ORIGINS=http://127.0.0.1:5000,http://localhost:5000
